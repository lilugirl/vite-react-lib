{
    "extends":"./tsconfig.json", // 拓展tsconfig.json
    "compilerOptions":{
        "noEmit":false, // 允许生成文件
        "declaration":true, // 需要设置为true来支持类型
        "emitDeclarationOnly":true, // 只生成声明文件
        "declarationDir":"lib" // 类型文件的导出目录
    }, 
    "include":["src"]  // 编译目标仅为src文件夹下的文件
}